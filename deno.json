{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "dom.extras",
      "deno.ns"
    ],
    "types": [
      "https://deno.land/x/aleph@1.0.0-beta.16/types.d.ts",
      "./types/index.d.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.2.0"
  },
  "importMap": "import_map.json",
  "tasks": {
    "dev": "deno run -A dev.ts",
    "start": "deno run -A server.ts",
    "opt": "deno run -A server.ts --optimize",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "files": {
      "exclude": [
        ".vscode/",
        "deno.json",
        "import_map.json",
        "README.md"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": ["dist/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-types",
        "ban-unused-ignore",
        "no-dupe-keys",
        "no-empty",
        "no-empty-pattern",
        "no-explicit-any",
        "no-invalid-triple-slash-reference",
        "no-namespace",
        "no-redeclare",
        "no-unreachable",
        "no-unsafe-negation",
        "no-unused-vars",
        "no-var",
        "prefer-const",
        "require-await",
        "valid-typeof"
      ]
    }
  }
}
